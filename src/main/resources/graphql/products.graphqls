input ProductInput {
    """
    'id' is optional in the ProductInput -
    If it's a new product, the id will be created and returned by the back end
    For an update, it is assumed the id will be supplied.
    """
    id: ID
    title: String!
    desc: String!
}

type Product {
    id: ID!
    title: String
    desc: String
}

type Mutation {
    addProduct(productInput: ProductInput): Product
}

type Query {
    allProducts: [Product]
    getProduct(id: ID): Product
}





