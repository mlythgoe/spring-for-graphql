"""
ProductInput is the input type for passing in details of a new product, or a product to be updated.
"""
input ProductInput {
    """
    'id' is optional in the ProductInput.
    If it's a new product, the id will be created and returned by the back end and so should not be passed in the request
    For an update, it is assumed the id will be supplied.
    """
    id: ID
    title: String!
    desc: String!
    price: Int!
    productPriceHistoryInputList: [ProductPriceHistoryInput]
}

input ProductPriceHistoryInput {
    """
    'id' is optional in the ProductInput.
    If it's a new product, the id will be created and returned by the back end and so should not be passed in the request
    For an update, it is assumed the id will be supplied.
    """
    id: ID
    startDate: String!
    price: Int!
}

"""
ProductSearchCriteria is the container for search criteria
"""
input ProductSearchCriteria{
    title: String
    desc: String
    lowerPrice: Int
    upperPrice: Int
}

"""
Product is the response object, i.e. it has been persisted, and so will always have an Id
"""
type Product {
    id: ID!
    title: String!
    desc: String!
    price: Int!
    productPriceHistories: [ProductPriceHistory]
}

type ProductPriceHistory {
    id: ID!
    startDate: String!
    price: Int!
}

type Mutation {
    """ Save a Product """
    saveProduct(productInput: ProductInput): Product
    """ Delete a Product """
    deleteProduct(id: Int): Int
}

type Query {
    """ Get All Products """
    allProducts: [Product]
    """ Get a Product for a Specific Id """
    getProduct(id: ID): Product
    """ Get a Product for a variety of conditions """
    searchProducts(productSearchCriteria: ProductSearchCriteria): [Product]
}